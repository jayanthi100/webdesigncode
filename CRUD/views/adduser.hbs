<div class="card1">
<div class="card1-header">
<h3 class="text-header">Add New Student</h3>
</div>


{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
<div class="card1-body">
 <form method="post" action="/adduser">
<div class="form-group">
    <label for="name">NAME</label>
    <input type="text" name="name" class="form-control1" >
</div>



<div class="form-group2">
    <label for="gender" id="gender">GENDER</label>
    <select id="gender" name="gender" class="form-control1">
  <option value="" class="form-control1">Select gender</option>
  <option value="male" class="form-control1">Male</option>
  <option value="female" class="form-control1">Female</option>
</select>
</div>

<div class="form-group2">
<label for="department" id="department">DEPARTMENT</label>
<select  name="department" id="department" class="form-control1"required>
  <option value="" class="form-control1">Select Department</option>
  <option value="ECE" class="form-control1">ECE</option>
  <option value="EEE" class="form-control1">EEE</option>
  <option value="BME"class="form-control1">BME</option>
  <option value="CSE"class="form-control1">CSE</option>
  <option value="MDE"class="form-control1">MDE</option>
  <option value="IT"class="form-control1">IT</option>
</select>
</div>


<div class="form-group">
    <label for="nationality">NATIONALITY</label>
    <input type="text" name="nationality" id="nationality" class="form-control1">
</div>

<div class="form-group">
    <button type="submit" class="vie">Add</button>
    <a  class="vie" href="/">View All</a>
</div>
</div>
</div>
</form>


