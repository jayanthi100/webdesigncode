.card1 {
  width: 350px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
  overflow: hidden;
  margin: 10px;
}
.card1-header {
  background-color: #333;
  padding: 16px;
  text-align: center;
}
.card1-header .text-header {
  margin: 0;
  font-size: 18px;
  color: rgb(255, 255, 255);
}
body{
  background-color:#EEEEEE;
}


   .form-group {
  margin-bottom: 10px;
  margin-left:10px;
}

.form-group label {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: bold;
  margin-bottom: 1px;
 
}
.form-group input[type="text"],
.form-group input[type="email"],
.form-group input[type="password"] {
  width: 250px;
  padding: 8px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 4px;
}


.form-group2 label {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: bold;
  margin-bottom: 1px;
}
.form-group2 input[type="text"],
.form-group2 input[type="email"],
.form-group2 input[type="password"] {
  width: 250px;
  padding: 2px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.form-group2 {
  margin-bottom: 10px;
  margin-left:12px;
  font-size:14px;
  padding:5px;
}












.form-control1{
    width: 250px;
  padding: 8px;
  font-size: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.vie {
  padding: 10px 20px;
  margin-left: 13px;
  font-size: 14px;
  border: none;
  border-radius: 4px;
  background-color: #333;
  color: #fff;
  text-transform: uppercase;
  transition: background-color 0.2s ease-in-out;
  cursor: pointer
}

.btn:hover {
  background-color: #ccc;
  color: #333;
}
#gender{
  font-size:14px;
   width: 250px;
   top:135px;
}

#department{
  font-size:14px;
  width:250px;
  
}
#nationality{
  padding:8px;
}

