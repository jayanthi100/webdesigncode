<style>

.card1 {
  width: 400px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
  overflow: hidden;
  margin: 10px;
}
.card1-header {
  background-color: #333;
  padding: 16px;
  text-align: center;
}
.card1-header .text-header {
  margin: 0;
  font-size: 18px;
  color: rgb(255, 255, 255);
}

   .form-group {
  margin-bottom: 10px;
  margin-left:10px;
}

.form-group label {
  display: block;
  font-size: 14px;
  color: #333;
  font-weight: bold;
  margin-bottom: 1px;
}.form-group input[type="text"],
.form-group input[type="email"],
.form-group input[type="password"] {
  width: 250px;
  padding: 8px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.form-control1{
    width: 250px;
  padding: 8px;
  font-size: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.vie {
  padding: 10px 20px;
  margin-left: 13px;
  font-size: 14px;
  border: none;
  border-radius: 4px;
  background-color: #333;
  color: #fff;
  text-transform: uppercase;
  transition: background-color 0.2s ease-in-out;
  cursor: pointer
}
body{
  background-color:#EEEEEE;
}


.btn:hover {
  background-color: #ccc;
  color: #333;
}
#gender{
    font-size:14px;
}
#department{
    font-size:14px;
}

</style>
<div class="card1">
    <div class="card1-header">
<h3 class="text-header">Edit Student Details</h3>
</div>

{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}
<div class="card1-body">
 <form method="post" action="/edituser/{{this.ID}}" autocomplete="false">

<div class="form-group">
    <label for="name">NAME</label>
    <input type="text" name="name" class="form-control1"  value="{{this.NAME}}">
</div>

<div class="form-group">
    <label for="id">ID</label>
    <input type="number"  name="id" class="form-control1" value="{{this.ID}}">
</div>

<div class="form-group">
    <label for="gender">GENDER</label>
  <input type="text"  name="gender" class="form-control1" value="{{this.GENDER}}">
</div>



<div class="form-group">
<label for="department">DEPARTMENT</label>
<input type="text" id="department" class="form-control1"  name="department" value="{{this.DEPARTMENT}}">
</div>

<div class="form-group">
<label for="nationality">NATIONALITY</label>
<input type="text" id="nationality" class="form-control1" name="nationality" value="{{this.NATIONALITY}}">
</div>

<div class="form-group">
    <button type="submit" class="vie" >Save Changes</button>
    <a class="vie" href="/">View All</a>
    
</div>
</div>
</div>

</form>
{{/each}}
